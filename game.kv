#:kivy 1.0.9

<Player>:
    size: 32,32
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            size: self.size
            pos: self.pos

<Jumper>:
    size: 32,32
    canvas:
        Color:
            rgb: (0,1,0)
        Rectangle:
            size: self.size
            pos: self.pos

<Block>:
    size: 32,32
    canvas:
        Color:
            rgb: (0,0,1)
        Rectangle:
            size: self.size
            pos: self.pos

<RunGame>:

    canvas.before:
        Color:
            rgb: (1,1,1)
        Rectangle:
            size: self.width,self.height

